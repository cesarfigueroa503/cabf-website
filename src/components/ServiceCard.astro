---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="bg-slate-800 p-6 rounded-lg hover:bg-slate-700 transition-all duration-300 transform hover:scale-105">
  <h3 class="text-xl font-bold mb-3">{icon} {title}</h3>
  <p class="text-gray-300">{description}</p>
</div>
