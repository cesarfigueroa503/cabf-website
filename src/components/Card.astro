---
interface Props {
  title: string;
  description: string;
  imageUrl?: string;
  link?: string;
}

const { title, description, imageUrl, link } = Astro.props;
---

<a href={link} class="block bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden transform transition-transform hover:scale-105">
  {imageUrl && (
    <img src={imageUrl} alt={title} class="w-full h-48 object-cover" />
  )}
  <div class="p-6">
    <h3 class="text-xl font-semibold mb-2 text-gray-800 dark:text-white">{title}</h3>
    <p class="text-gray-600 dark:text-gray-300 mb-4">{description}</p>
  </div>
</a>
